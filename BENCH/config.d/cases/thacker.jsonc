{
  // THACKER
  "THACKER": {
    "title": "THACKER - NO-2DV - (200 x 200 x 5 : 600)",
    "case": "THACKER",
    "cppkeys": {
      "THACKER_2DV": false,
    },
    "splitting": { "1": "1x1", "2": "2x1", "4": "2x2", "6": "1x6", "8": "2x4" },
    "patches": {
      // Change the size of the mesh
      "param.h": {
        "mode": "replace",
        "after": "#if defined THACKER",
        "what": "      parameter (LLm0=200,  MMm0=200,  N=5 )   !  1 km resolution",
        "by": "      parameter (LLm0=200,  MMm0=200,  N=5 )   !  1 km resolution",
        "descr": "Set mesh size to (200 x 200 x 5)",
      },
      // Change the dt
      "TEST_CASES/croco.in.Thacker": {
        "mode": "replace",
        "after": " time_stepping: NTIMES   dt[sec]  NDTFAST  NINFO",
        "what": "               4320      60       30       1",
        "by": "                600      60       30       1",
        "descr": "Set stepping (steps=600, dt=60, fast=30)",
      },
    },
    "check_outputs": ["thacker_his.nc"],
  },
  "THACKER_2DV": {
    "title": "THACKER - 2DV - (200 x 1 x 5 : 4320)",
    "case": "THACKER",
    "cppkeys": {
      "THACKER_2DV": true,
    },
    "splitting": { "1": "1x1", "2": "2x1", "4": "4x1" },
    "patches": {},
    "check_outputs": ["thacker_his.nc"],
  },
}
