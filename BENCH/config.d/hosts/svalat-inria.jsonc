{
	// my inria laptop
	"svalat-inria": {
		"ressources": {
			"cpu": 12,
			"gpu": 1
		},
		"tuning": {
			"gnu": "-march=native",
			"nvfortran": "-tp=native -nofma",
			"environ": {
				"OMP_PROC_BIND": "spread"
			},
			"mpi_options": "-use-hwthread-cpus",
			"hwloc_bind": {
				// because I have some low & fast cores and want to run only on fast
				"openmp": "hwloc-bind core:0-5",
				"mpirun": "hwloc-bind core:0-5"
			}
		}
	}
}
