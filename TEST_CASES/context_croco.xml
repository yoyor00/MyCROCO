<?xml version="1.0"?>
<context id="crocox">
  <!-- ================================================================ -->
  <field_definition src="./field_def_croco.xml"/>
  <!-- ================================================================ -->
  <file_definition src="./file_def_croco.xml"/>
  <!-- ================================================================ -->
  <domain_definition>
  <domain_group id="rho">
    <domain id="rho" long_name="grid Rho"/>
  </domain_group>
  <domain_group id="u">
    <domain id="u" long_name="grid U"/>
  </domain_group>
  <domain_group id="v">
    <domain id="v" long_name="grid V"/>
  </domain_group>
  <domain_group id="w">
    <domain id="w" long_name="grid W"/>
  </domain_group>
  <domain_group id="b">
    <domain id="b" long_name="grid sed"/>
  </domain_group>
  <domain_group id="psi">
    <domain id="psi" long_name="grid psi"/>
  </domain_group>
</domain_definition>
  <axis_definition>
    <axis id="s_rho" long_name="S-coordinate at RHO-points"/>
    <axis id="s_w" long_name="S-coordinate at W-points"/>
    <axis id="s_b"/>
    <!-- For Sediment -->
    <axis id="s_rhoS"/>
    <!-- For Sediment + PISCES -->
    <axis id="N_abl"/>
  </axis_definition>
  <scalar_definition>
    <scalar id="scalar"/>
  </scalar_definition>
  <grid_definition>
    <grid id="scalar_grid">
      <scalar scalar_ref="scalar"/>
    </grid>
    <grid id="rho_2D">
      <domain domain_ref="rho"/>
    </grid>
    <grid id="u_2D">
      <domain domain_ref="u"/>
    </grid>
    <grid id="v_2D">
      <domain domain_ref="v"/>
    </grid>
    <grid id="w_2D">
      <domain domain_ref="w"/>
    </grid>
    <grid id="rho_3D">
      <domain domain_ref="rho"/>
      <axis axis_ref="s_rho"/>
    </grid>
    <grid id="rho_3DS">
      <domain domain_ref="rho"/>
      <axis axis_ref="s_rhoS"/>
    </grid>
    <grid id="abl_3D">
      <domain domain_ref="rho"/>
      <axis axis_ref="N_abl"/>
    </grid>
    <grid id="u_3D">
      <domain domain_ref="u"/>
      <axis axis_ref="s_rho"/>
    </grid>
    <grid id="v_3D">
      <domain domain_ref="v"/>
      <axis axis_ref="s_rho"/>
    </grid>
    <grid id="w_3D">
      <domain domain_ref="w"/>
      <axis axis_ref="s_w"/>
    </grid>
    <grid id="b_2D">
      <domain domain_ref="b"/>
    </grid>
    <grid id="b_3D">
      <domain domain_ref="b"/>
      <axis axis_ref="s_b"/>
    </grid>
    <grid id="psi_2D">
      <domain domain_ref="psi"/>
    </grid>
    <grid id="rho_vertical_dimension">
      <axis axis_ref="s_rho"/>
    </grid>
    <grid id="w_vertical_dimension">
      <axis axis_ref="s_w"/>
    </grid>
    <grid id="abl_vertical_dimension">
      <axis axis_ref="N_abl"/>
    </grid>
  </grid_definition>
</context>
