# ifdef DIAGNOSTICS_EDDY


        <field_definition>
         <field id="workru" name="workru" />
         <field id="workrv" name="workrv" />
        </field_definition>


		<file_definition type="one_file"  name="./HIS/@expname@_@freq@" sync_freq="5d" min_digits="4">
			<file_group id="EDDY" output_freq="5d"  output_level="10" enabled=".TRUE."> <!-- 1 time step files -->
				<file id="file9" name_suffix="_EDDY" split_freq="5d" split_freq_format="%y-%mo-%d">

                    <field_group id="eddy_fields" operation="average">
                      <field id="uu" field_ref="workru"> workru * workru </field>
                      <field id="uv" field_ref="workru"> workru * workrv </field>
                      <field id="vv" field_ref="workru"> workrv * workrv </field>
                      <field id="uw" field_ref="workru"> workru * w </field>
                      <field id="vw" field_ref="workru"> workrv * w </field>
                      <field id="wb" field_ref="workru"> w * buoy </field>
					</field_group>

				</file>
			</file_group>
		</file_definition>
# endif
		


		<!-- ========================================================================== -->
		<!-- ========================================================================== -->

		<domain_definition src="./domain_def.xml"/>

		<axis_definition>
			<axis id="s_rho"/>
			<axis id="s_w"/>
			<!-- For Sediment -->
			<axis id="s_b"/>
		</axis_definition>

		<scalar_definition>
			<scalar id="scalar"/>
		</scalar_definition>

		<grid_definition>
			<grid id="scalar_grid">
				<scalar scalar_ref="scalar"/>
			</grid>
			<grid id="rho_2D">
				<domain domain_ref="rho"/>
			</grid>
			<grid id="rho_3D">
				<domain domain_ref="rho"/>
				<axis axis_ref="s_rho"/>
			</grid>
			
			<grid id="u_2D">
				<domain domain_ref="u"/>
			</grid>
			<grid id="u_3D">
				<domain domain_ref="u"/>
				<axis axis_ref="s_rho"/>
			</grid>
			<grid id="v_2D">
				<domain domain_ref="v"/>
			</grid>
			<grid id="v_3D">
				<domain domain_ref="v"/>
				<axis axis_ref="s_rho"/>
			</grid>
			<grid id="w_2D">
				<domain domain_ref="w"/>
			</grid>
			<grid id="w_3D">
				<domain domain_ref="w"/>
				<axis axis_ref="s_w"/>
			</grid>
			<grid id="b_2D">
				<domain domain_ref="b"/>
			</grid>
			<grid id="b_3D">
				<domain domain_ref="b"/>
				<axis axis_ref="s_b"/>
			</grid>
            <grid id="psi_2D">
                <domain domain_ref="psi"/>
            </grid>
			<grid id="rho_vertical_dimension">
				<axis axis_ref="s_rho"/>
			</grid>
			<grid id="w_vertical_dimension">
				<axis axis_ref="s_w"/>
			</grid>
		</grid_definition>

	</context>



	<context id="xios">
		<variable_definition>
			<variable_group id="buffer">
				<variable id="optimal_buffer_size" type="string">performance</variable>
				<variable id="buffer_size_factor" type="double">1.0</variable>
			</variable_group>

			<variable_group id="parameters" >
				<variable id="using_server" type="bool">true</variable>
				<variable id="info_level" type="int">0</variable>
				<variable id="print_file" type="bool">false</variable>
			</variable_group>
		</variable_definition>
	</context>

</simulation>
